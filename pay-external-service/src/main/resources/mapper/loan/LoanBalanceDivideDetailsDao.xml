<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tfjt.pay.external.unionpay.dao.LoanBalanceDivideDetailsDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.tfjt.pay.external.unionpay.entity.LoanBalanceDivideDetailsEntity" id="payBalanceDivideDetailsMap">
        <result property="id" column="id"/>
        <result property="divideId" column="divide_id"/>
        <result property="recvBalanceAcctId" column="recv_balance_acct_id"/>
        <result property="amount" column="amount"/>
        <result property="subTradeOrderNo" column="sub_trade_order_no"/>
        <result property="recvBalanceAcctName" column="recv_balance_acct_name"/>
        <result property="status" column="status"/>
        <result property="reason" column="reason"/>
        <result property="remark" column="remark"/>
        <result property="createRemark" column="create_remark"/>
        <result property="finishedAt" column="finished_at"/>
        <result property="createTime" column="create_time"/>
        <result property="userId" column="user_id"/>
        <result property="state" column="state"/>
        <result property="subBusinessOrderNo" column="sub_business_order_no"/>
    </resultMap>

    <select id="listUnCheckBill" resultType="com.tfjt.pay.external.unionpay.entity.LoanUnionpayCheckBillDetailsEntity">
        select
         de.id,
         d.trade_order_no as platformOrderNo,
         de.transfer_id as systemOrderNo,
         de.amount/100 as orderMoney
        from tf_loan_balance_divide d
        left join tf_loan_balance_divide_details de on d.id=de.divide_id
        where FROM_UNIXTIME(d.finished_at)=#{date} and d.status='succeeded'
    </select>
    <select id="countUnCheckBill" resultType="java.lang.Integer">
        select
            count(1)
        from tf_loan_balance_divide d
        left join tf_loan_balance_divide_details de on d.id=de.divide_id
        where FROM_UNIXTIME(d.finished_at)=#{date} and d.status='succeeded'
    </select>
</mapper>