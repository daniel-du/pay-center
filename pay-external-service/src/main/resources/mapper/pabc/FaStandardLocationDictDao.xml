<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tfjt.pay.external.unionpay.dao.FaStandardLocationDictDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.tfjt.pay.external.unionpay.entity.FaStandardLocationDictEntity" id="faStandardLocationDictMap">
        <result property="id" column="id"/>
        <result property="provinceName" column="province_name"/>
        <result property="provinceCode" column="province_code"/>
        <result property="cityName" column="city_name"/>
        <result property="cityCode" column="city_code"/>
        <result property="districtName" column="district_name"/>
        <result property="districtCode" column="district_code"/>
        <result property="areaShoppingId" column="area_shopping_id"/>
        <result property="createDate" column="create_date"/>
        <result property="createUser" column="create_user"/>
        <result property="delFlag" column="del_flag"/>
    </resultMap>

    <select id="getAreasByCode" resultType="java.lang.String">
        select concat(province_name,'/',city_name,'/',district_name) from fa_standard_location_dict
        <where>
            and district_code in
            <foreach collection="saleAreas" item="item" open="(" close=")" separator=",">
                #{item}
            </foreach>
        </where>
    </select>
</mapper>