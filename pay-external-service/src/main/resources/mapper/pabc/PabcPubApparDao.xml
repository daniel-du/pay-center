<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tfjt.pay.external.unionpay.dao.PabcPubAppparDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.tfjt.pay.external.unionpay.entity.PabcPubAppparEntity" id="PabcPubAppparMap">
        <result property="aprValue" column="apr_value"/>
        <result property="aprShowmsg" column="apr_showmsg"/>
        <result property="aprCode" column="apr_code"/>
    </resultMap>

    <select id="getBankInfoByName" resultType="com.tfjt.pay.external.unionpay.dto.resp.BankNameAndCodeRespDTO">
        select apr_value as code, apr_showmsg as name from tf_pabc_pub_apppar
        <if test="name != null and name !=''">
            where name like concat('%',#{name},'%')
        </if>
    </select>
</mapper>